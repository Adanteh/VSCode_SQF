{
	"pluginId": "vs.language.sqf",
	"activationEvents": ["textModel:sqf"],
	"mainModule": "./sqfMain",
	"scripts": {
		"compile": "node ../../node_modules/gulp/bin/gulp.js --gulpfile ../gulpfile.js compile --dir vs.language.sqf"
	},
	"contributes": {
		"language": [{
			"id": "sqf",
			"aliases": ["SQF","sqf"],
			"extensions": [".sqf", ".sqm"],
			"mimetypes": ["text/sqf", "text/plain"]
		}],
		"configuration": {
			"type": "object",
			"title": "SQF configuration",
			"properties": {
				"sqf.useCodeSnippetsOnMethodSuggest": {
					"type": "boolean",
					"default": false,
					"description": "Complete functions with their parameter signature."
				},
				"sqf.tsdk": {
					"type": "string",
					"default": null,
					"description": "Specifies the folder path containing the tsserver and lib*.d.ts files to use."
				}
			}
		}
	}
}